#include <TinyGPS++.h>
#include <HardwareSerial.h>

TinyGPSPlus gps;
HardwareSerial SerialGPS(1);

void setup() {
  Serial.begin(115200);          // ComunicaciÃ³n con PC
  SerialGPS.begin(9600, SERIAL_8N1, 16, 17); // UART GPS en GPIO16 (RX), GPIO17 (TX)
}

void loop() {
  while (SerialGPS.available() > 0) {
    gps.encode(SerialGPS.read());
    if (gps.location.isUpdated()) {
      float lat = gps.location.lat();
      float lon = gps.location.lng();
      unsigned long tiempo = millis() / 1000;

      // Enviar datos por serial en formato CSV
      Serial.print(tiempo);
      Serial.print(",");
      Serial.print(lat, 6);
      Serial.print(",");
      Serial.println(lon, 6);
    }
  }
}
