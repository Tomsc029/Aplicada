#define ENA 18
#define IN1 23
#define IN2 22

#define BOTON_DERECHA 19
#define BOTON_IZQUIERDA 21

void setup() {
  pinMode(ENA, OUTPUT);
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);

  pinMode(BOTON_DERECHA, INPUT_PULLUP);
  pinMode(BOTON_IZQUIERDA, INPUT_PULLUP);
}

void loop() {
  int derecha = digitalRead(BOTON_DERECHA);
  int izquierda = digitalRead(BOTON_IZQUIERDA);

  if (derecha == LOW && izquierda == HIGH) {
    // Solo botón derecha presionado
    digitalWrite(IN1, HIGH);
    digitalWrite(IN2, LOW);
    digitalWrite(ENA, HIGH);
  }
  else if (izquierda == LOW && derecha == HIGH) {
    // Solo botón izquierda presionado
    digitalWrite(IN1, LOW);
    digitalWrite(IN2, HIGH);
    digitalWrite(ENA, HIGH);
  }
  else {
    // Ambos presionados o ninguno
    digitalWrite(ENA, LOW);
  }
}
