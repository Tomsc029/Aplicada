# SECCIÃ“N 6: OBTENER PARES CLAVE-VALOR CON ITEMS()
# =============================================================================
# Separador para la sexta secciÃ³n

def mostrar_items():
    # Define la funciÃ³n mostrar_items sin parÃ¡metros
    """
    Demuestra el uso de items() para iterar sobre pares clave-valor.
    Muy Ãºtil para procesar tanto claves como valores simultÃ¡neamente.
    """
    # Docstring explicando la utilidad del mÃ©todo items()
    
    print("=== SECCIÃ“N 6: Trabajar con pares clave-valor ===")
    # TÃ­tulo de la secciÃ³n
    
    biggest_brands = {
        # Diccionario con valuaciones de marcas en miles de millones
        "Apple": 184,
        # Apple vale 184 mil millones
        "Google": 141.7,
        # Google vale 141.7 mil millones
        "Microsoft": 80,
        # Microsoft vale 80 mil millones
        "Coca-Cola": 69.7,
        # Coca-Cola vale 69.7 mil millones
        "Amazon": 64.8
        # Amazon vale 64.8 mil millones
    }
    # Fin de la definiciÃ³n del diccionario de marcas
    
    print("Valuaciones de marcas (en miles de millones USD):")
    # SubtÃ­tulo explicando quÃ© se va a mostrar
    for company, value in biggest_brands.items():
        # Itera sobre cada par clave-valor del diccionario
        # company recibe la clave, value recibe el valor
        print(f"  ğŸ’° {company} tiene un valor de ${value} mil millones")
        # Imprime cada empresa con su valuaciÃ³n usando formato de string
    
    # Ejemplo con estadÃ­sticas
    # Comentario introduciendo otro ejemplo
    pct_women_in_occupation = {
        # Diccionario con porcentajes de mujeres por profesiÃ³n
        "CEO": 28,
        # 28% de CEOs son mujeres
        "Engineering Manager": 9,
        # 9% de managers de ingenierÃ­a son mujeres
        "Pharmacist": 58,
        # 58% de farmacÃ©uticos son mujeres
        "Physician": 40,
        # 40% de mÃ©dicos son mujeres
        "Lawyer": 37,
        # 37% de abogados son mujeres
        "Aerospace Engineer": 9
        # 9% de ingenieros aeroespaciales son mujeres
    }
    # Fin de la definiciÃ³n del diccionario de estadÃ­sticas
    
    print("\nPorcentaje de mujeres por profesiÃ³n:")
    # SubtÃ­tulo con lÃ­nea nueva antes
    for occupation, percentage in pct_women_in_occupation.items():
        # Itera sobre cada par profesiÃ³n-porcentaje
        emoji = "ğŸ‘©â€ğŸ’¼" if percentage >= 40 else "ğŸ“Š"
        # Asigna emoji segÃºn el porcentaje: ğŸ‘©â€ğŸ’¼ si â‰¥40%, ğŸ“Š si <40%
        print(f"  {emoji} {percentage}% de {occupation}s son mujeres")
        # Imprime cada profesiÃ³n con su porcentaje y emoji correspondiente
    print()
    # LÃ­nea en blanco

# =============================================================================
# SECCIÃ“N 7: EJEMPLOS ADICIONALES Y MEJORES PRÃCTICAS
# =============================================================================
# Separador para la sÃ©ptima secciÃ³n

def ejemplos_avanzados():
    # Define la funciÃ³n ejemplos_avanzados sin parÃ¡metros
    """
    Ejemplos adicionales con mejores prÃ¡cticas para diccionarios.
    """
    # Docstring describiendo el contenido de esta funciÃ³n
    
    print("=== SECCIÃ“N 7: Ejemplos avanzados ===")
    # TÃ­tulo de la secciÃ³n
    
    # 1. Contar elementos con get()
    # Comentario numerado explicando el primer ejemplo avanzado
    texto = "python es genial y python es poderoso"
    # String de ejemplo que contiene palabras repetidas
    contador_palabras = {}
    # Diccionario vacÃ­o para contar frecuencia de palabras
    
    for palabra in texto.split():
        # Divide el texto en palabras y itera sobre cada una
        contador_palabras[palabra] = contador_palabras.get(palabra, 0) + 1
        # Si la palabra existe, obtiene su cuenta actual; si no, usa 0. Luego suma 1
    
    print("Contador de palabras:")
    # SubtÃ­tulo para mostrar los resultados
    for palabra, cuenta in contador_palabras.items():
        # Itera sobre cada par palabra-cuenta en el diccionario contador
        print(f"  '{palabra}': {cuenta}")
        # Imprime cada palabra con su frecuencia
    
    # 2. Diccionario de diccionarios (estructura anidada)
    # Comentario numerado explicando el segundo ejemplo
    estudiantes = {
        # Diccionario donde cada valor es otro diccionario (estructura anidada)
        "Ana": {"edad": 20, "carrera": "IngenierÃ­a", "promedio": 8.5},
        # Ana es clave, su valor es un diccionario con edad, carrera y promedio
        "Luis": {"edad": 22, "carrera": "Medicina", "promedio": 9.0},
        # Luis es clave, su valor es un diccionario con edad, carrera y promedio
        "MarÃ­a": {"edad": 19, "carrera": "Arte", "promedio": 8.8}
        # MarÃ­a es clave, su valor es un diccionario con edad, carrera y promedio
    }
    # Fin de la definiciÃ³n del diccionario anidado
    
    print("\nInformaciÃ³n de estudiantes:")
    # SubtÃ­tulo con lÃ­nea nueva antes
    for nombre, info in estudiantes.items():
        # Itera sobre cada estudiante (nombre) y su informaciÃ³n (diccionario)
        print(f"  {nombre}: {info['edad']} aÃ±os, {info['carrera']}, promedio: {info['promedio']}")
        # Accede a los valores del diccionario interno usando sus claves
    
    # 3. Usar setdefault() para inicializar listas
    # Comentario numerado explicando el tercer ejemplo
    grupos = {}
    # Diccionario vacÃ­o para agrupar estudiantes por carrera
    estudiantes_por_carrera = [
        # Lista de tuplas con informaciÃ³n estudiante-carrera
        ("Ana", "IngenierÃ­a"), ("Luis", "Medicina"), ("MarÃ­a", "Arte"),
        # Tres tuplas con nombre y carrera de cada estudiante
        ("Pedro", "IngenierÃ­a"), ("Sofia", "Medicina")
        # Dos tuplas mÃ¡s con nombre y carrera
    ]
    # Fin de la definiciÃ³n de la lista de tuplas
    
    for nombre, carrera in estudiantes_por_carrera:
        # Itera sobre cada tupla (nombre, carrera)
        grupos.setdefault(carrera, []).append(nombre)
        # setdefault crea la clave con lista vacÃ­a si no existe, luego agrega el nombre
    
    print("\nEstudiantes agrupados por carrera:")
    # SubtÃ­tulo con lÃ­nea nueva antes
    for carrera, estudiantes in grupos.items():
        # Itera sobre cada carrera y su lista de estudiantes
        print(f"  {carrera}: {', '.join(estudiantes)}")
        # Une los nombres con comas y los imprime por carrera
    print()
    # LÃ­nea en blanco final

