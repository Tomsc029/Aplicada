    //Este es el codigo de los 8 leds de forma extensa 
https://wokwi.com/projects/441257425170301953
 *//Codigo reducido
// Define los pines para los 8 LEDs. 
// Conectados en un rango de pines digitales del 2 al 9.
int leds[] = {2, 3, 4, 5, 6, 7, 8, 9}; 
int numLeds = 8; // NÃºmero total de LEDs

void setup() {
  // Configura todos los pines de los LEDs como salidas.
  for (int i = 0; i < numLeds; i++) {
    pinMode(leds[i], OUTPUT);
  }
}

void loop() {
  // Secuencia: encender y apagar todos los LEDs en secuencia ascendente.
  for (int i = 0; i < numLeds; i++) {
    digitalWrite(leds[i], HIGH); // Enciende el LED
    delay(100);                  // Mantiene encendido por un corto tiempo
    digitalWrite(leds[i], LOW);  // Apaga el LED
  }

  // Secuencia: encender y apagar todos los LEDs en secuencia descendente.
  for (int i = numLeds - 1; i >= 0; i--) {
    digitalWrite(leds[i], HIGH); // Enciende el LED
    delay(100);                  // Mantiene encendido por un corto tiempo
    digitalWrite(leds[i], LOW);  // Apaga el LED
  }
}
